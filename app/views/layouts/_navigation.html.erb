<ul class="nav">
  <li>
    <%= link_to "Postit!", root_path, :class => 'brand' %>
  </li>
</ul>

<div class="btn-group nav_item">
  <%= link_to '#', class: "btn btn-small dropdown-toggle", 'data-toggle' => "dropdown" do %>
    Categories <span class="caret"></span>
  <% end %>>
  <ul class="dropdown-menu">
    <% all_categories.each do |category| %>
      <li><%= link_to category.name, category_path(category) %></li>
    <% end %>

    <% if logged_in? %>
      <li class="divider"></li>
      <li>
        <%= link_to(new_category_path) do %>
          <%= content_tag(:i, '', class: 'icon-plus') %> New Category
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<% if logged_in? %>
  <div class="nav_item">
    <%= link_to 'New Post', new_post_path, class: 'btn btn-success btn-small' %>
  </div>

  <div class="nav_item">
    <%= link_to 'Edit Profile', profile_path, class: 'btn btn-success btn-small' %>
  </div>
  <div class="nav_item">
    <%= link_to "Logout (#{current_user.username})", logout_path, class: 'btn btn-success btn-small' %>
  </div>
<% else %>
  <div class="nav_item">
    <%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %>
  </div>

  <div class="nav_item">
    <%= link_to 'Login', login_path, class: 'btn btn-success btn-small' %>
  </div>
<% end %>